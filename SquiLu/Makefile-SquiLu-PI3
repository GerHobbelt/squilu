%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)
	
%.o: %.cpp
	$(CXX) -c -o $@ $< $(CFLAGS)
	
squilu: $(OBJECTS_PROG) 
	$(CXX) $(CFLAGS) -o $@ $(OBJECTS_PROG) $(LIBDIR) $(LDFLAGS)
	$(AR) rcs libsquilu.a $(OBJECTS)
